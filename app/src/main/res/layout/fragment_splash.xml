<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.startScreens.SplashFragment">

    <ImageView
        android:id="@+id/image_splash"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/welcome_app_image"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/image_splash"
        app:layout_constraintRight_toRightOf="@id/image_splash"
        app:layout_constraintTop_toBottomOf="@id/image_splash" />


</androidx.constraintlayout.widget.ConstraintLayout>